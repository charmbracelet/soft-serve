drwxrwxrwx	-	 folder
-rw-r--r--	-	 .hidden
-rw-r--r--	7 B	 README.md
-rw-r--r--	2 B	 b.md
-- tree2.txt --
-rw-r--r--	5 B	 aa.md
-- tree3.txt --
-rw-r--r--	2 B	 b.md
-- tree4.txt --
-rw-r--r--	4 B	 üçï.md
